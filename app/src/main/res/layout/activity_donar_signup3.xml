<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donar_signup3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ff0000"
    tools:context="com.example.rajukumarsingh.bloodbank.Donar_signup3">

    <TextView
        android:text="SIGN UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView64"
        android:textSize="35dp"
        android:textStyle="normal|bold"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="FILL THESE CONTACT DETAILS"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView64"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView67"
        android:textSize="15dp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_height="20dp" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView70"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/editText34"
        android:layout_alignRight="@+id/textView68"
        android:layout_alignEnd="@+id/textView68" />

    <TextView
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView70"
        android:layout_marginTop="15dp"
        android:id="@+id/textView71"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/textView70"
        android:layout_alignStart="@+id/textView70" />

    <TextView
        android:text="EMAIL ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView72"
        android:textStyle="normal|bold"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/editText35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="EMERGENCY CONTACTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView69"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView68"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="PHONE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView68"
        android:textSize="23dp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_below="@+id/textView67"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText36"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_alignTop="@+id/textView72"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText35"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="PARENTS OR FRIENDS"
        android:textColorHint="#cccccc"
        android:layout_alignTop="@+id/textView71"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText34"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="PARENTS OR FRIENDS"
        android:textColorHint="#cccccc"
        android:layout_below="@+id/textView69"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText33"
        android:background="#ffffff"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textView68"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="SUBMIT"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:id="@+id/button17"
        android:layout_below="@+id/editText37"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="normal|bold"
        android:background="#3E2723" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText37"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/textView73"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView73"
        android:textSize="23dp"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:layout_below="@+id/editText36"
        android:layout_alignLeft="@+id/textView68"
        android:layout_alignStart="@+id/textView68" />


</RelativeLayout>
