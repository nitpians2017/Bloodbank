<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blood_bank_sign_up_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajukumarsingh.bloodbank.Bloodbank_sign_up"
    >

    <RelativeLayout
        android:id="@+id/activity_bloodbank_sign_up"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff0000"
        android:padding="5dp"
        >

        <TextView
            android:text="SIGN UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/textView14"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="50dp" />

        <TextView
            android:text=" BLOOD BANK NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/textView16"
            android:textSize="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:textColor="#000000" />

        <EditText
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView16"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:id="@+id/editText10"
            android:background="#ffffff"
            android:layout_width="300dp" />

        <TextView
            android:text="BLOOD BANK ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/textView17"
            android:textColor="#000000"
            android:textStyle="normal|bold"
            android:textSize="20dp"
            android:layout_below="@+id/editText10"
            android:layout_alignLeft="@+id/editText10"
            android:layout_alignStart="@+id/editText10" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:id="@+id/editText12"
            android:background="#ffffff" />

        <TextView
            android:text="ADDRESS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_below="@+id/editText12"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/editText12"
            android:layout_alignStart="@+id/editText12"
            android:textColor="#000000"
            android:paddingTop="15dp"
            android:textStyle="normal|bold"
            android:textSize="20dp" />

        <EditText
            android:layout_width="300dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView18"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:id="@+id/editText13"
            android:layout_height="35dp"
            android:background="#ffffff" />

        <TextView
            android:text="CITY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText13"
            android:layout_alignLeft="@+id/editText13"
            android:layout_alignStart="@+id/editText13"
            android:layout_marginTop="11dp"
            android:paddingTop="5dp"
            android:id="@+id/textView19"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="300dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView19"
            android:layout_alignLeft="@+id/textView19"
            android:layout_alignStart="@+id/textView19"
            android:id="@+id/editText14"
            android:layout_height="35dp"
            android:background="#ffffff" />

        <TextView
            android:text="DISTRICT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText14"
            android:layout_alignLeft="@+id/editText14"
            android:layout_alignStart="@+id/editText14"
            android:layout_marginTop="14dp"
            android:id="@+id/textView20"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:textColor="#000000" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView20"
            android:layout_alignLeft="@+id/textView20"
            android:layout_alignStart="@+id/textView20"
            android:id="@+id/editText15"
            android:background="#ffffff" />

        <TextView
            android:text="STATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText15"
            android:layout_alignLeft="@+id/editText15"
            android:layout_alignStart="@+id/editText15"
            android:layout_marginTop="17dp"
            android:id="@+id/textView21"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:textColor="#000000" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView21"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21"
            android:id="@+id/editText16"
            android:background="#ffffff" />


        <TextView
            android:text="PIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText16"
            android:layout_alignLeft="@+id/editText16"
            android:layout_alignStart="@+id/editText16"
            android:layout_marginTop="17dp"
            android:id="@+id/textView22"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:textColor="#000000" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/textView22"
            android:layout_alignLeft="@+id/textView22"
            android:layout_alignStart="@+id/textView22"
            android:id="@+id/editText17"
            android:background="#ffffff" />

        <TextView
            android:text="CONTACT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText17"
            android:layout_alignLeft="@+id/editText17"
            android:layout_alignStart="@+id/editText17"
            android:layout_marginTop="17dp"
            android:id="@+id/textView23"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:textColor="#000000" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/textView23"
            android:layout_alignLeft="@+id/textView23"
            android:layout_alignStart="@+id/textView23"
            android:id="@+id/editText18"
            android:background="#ffffff" />


        <TextView
            android:text="EMAIL ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText18"
            android:layout_alignLeft="@+id/editText18"
            android:layout_alignStart="@+id/editText18"
            android:layout_marginTop="17dp"
            android:id="@+id/textView24"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:textColor="#000000" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_below="@+id/textView24"
            android:layout_alignLeft="@+id/textView24"
            android:layout_alignStart="@+id/textView24"
            android:id="@+id/editText19"
            android:background="#ffffff" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText19"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="SUBMIT"
            android:elevation="30dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="#3E2723"
            android:id="@+id/signup" />

    </RelativeLayout>
</ScrollView>

